<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body class="container">
        <header>
            <% include ../partials/nav %>
        </header>
        <main>
            <div class="card">
                <div class="card-header"><%= title %></div>
                <div class="card-body">
                    <h2><%= title %>
                    	<% if (title !== username && username){ %>
                    		<a href="/users/follow/<%= title %>" class="btn btn-success">Follow</a>
                    	<%} %>
                    </h2>
                    <% journals.forEach(journal => { %>
                    <h3><a href="/journals/show/<%= journal.id %>"><%= journal.title %></a><small> 
                        <% if(UserId == journal.UserId){%>
                        <a href="/journals/edit/<%= journal.id %>/<%= journal.User.id %>"><i class="fa fa-pencil"></i></a>
                        <a href="/journals/delete/<%= journal.id %>"><i class="fa fa-trash"></i></a>
                        <% } %>
                    </small></h3>
                    <p class="subtitle"><%= journal.happenedAt.toDateString() %> | 
                    <%= title %></p>
                    <p><%= journal.content %></p>
                    <% }) %>
                </div>
            </div>
        </main>
    </body>
</html>