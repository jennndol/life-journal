<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">
    <header>
        <% include ../partials/nav %>
    </header>
    <main>
        <div class="card">
            <div class="card-header">Student</div>
            <div class="card-body">
                <h2><%= title %></h2>
                <%= error %>
                <form action="/journals/edit/<%= journal.id %>" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" value="<%= journal.title %>" class="form-control" id="title" placeholder="eg: Cycling in The Morning" name="title">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="content" placeholder="eg: Tell your story here!" name="content">
                            <%= journal.content %>
                        </textarea>
                    </div>
                    <div class="form-group">
                        <label for="happenedAt">Happened At</label>
                        <input type="text" value="<%= journal.happenedAt %>" class="form-control" id="happenedAt" name="happenedAt" placeholder="dd/mm/yyyy">
                    </div>
                    <input type="submit" class=" btn btn-block btn-info">
                </form>
            </div>
        </div>
    </main>
</body>

</html>