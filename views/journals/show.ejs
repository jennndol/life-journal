<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body class="container">
        <header>
            <% include ../partials/nav %>
        </header>
        <main>
            <div class="card">
                <div class="card-header"><%= title %></div>
                <div class="card-body">
                    <h2><%= title %></h2>
                    <h3><%= journal.title %><small> 
                        <% if(username == journal.User.username){%>
                        <a href="/journals/edit/<%= journal.id %>/<%= journal.User.id %>"><i class="fa fa-pencil"></i></a>
                        <a href="/journals/delete/<%= journal.id %>"><i class="fa fa-trash"></i></a>
                        <% } %>
                    </small></h3>
                    <p><%= journal.happenedAt.toDateString() %> | 
                    <%= journal.User.username %></p>
                    <p><%= journal.content %></p>                    
                </div>
            </div>
        </main>
    </body>
</html>